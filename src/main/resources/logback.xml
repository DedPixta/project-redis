<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <property name="LOG_PATTERN" value="%highlight(%date{ISO8601} [%thread] %-5level) %yellow(%-50logger{36}) - %msg%n" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>